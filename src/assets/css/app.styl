/**
 * @file 统一样式
 * @author
 */
@import "./variable.styl"

html
  font-size $base-font-size
  height 100%
body
  margin 0
  padding 0
  height 100%
  flexbox(flex)
  flex-flow(column nowrap)
  color $color-font-primary
  font-family 'Microsoft Yahei', '微软雅黑', Arial, sans-serif

// ul默认不带样式
  ul
    list-style none
    padding 0
    margin 0
  button
    height $button-height
    width $button-width
    border 0
    color #fff
    font-family 'Microsoft Yahei'
    border-radius 30px
    cursor pointer
  input
    border-radius 30px
    border 0
  .btn-style
    border-radius 40px
    width 120px

  a
    color $color-font-primary
    text-decoration none
  // 表单控件去除默认样式
  input
  button
  textarea
    appearance none
  .pointer
    cursor pointer
  .danger
    color red
  // 游戏面板展示样式
  .board
    width $games-width
    height $games-width
    background-color #658456
  .boardName
    color $color-font-primary
    width $games-width
    height 45px
    line-height 45px
    font-weight bold

  // 表单信息提示
  .is-danger
    color red
  .alert
    position relative
    span
      position absolute
      height 30px
      line-height 30px
      top 0
      right 0
  .clearfix
    zoom 1
  .clearfix:after
    content ''
    display block
    height 0
    clear both
    visibility hidden
//button按钮字体
  button
    font-size 14px
// 文本区样式
  .newText
    width 294px
    height 36px
    background-color #f8f8f8
    border 1px solid #eee
    margin-top 5px
  .A44 {
    page-break-before: auto;
    page-break-after: always;
  }
  .dialog-horizon
    min-height: 400px;
    display: block;
  .dialogBody
    min-height: 260px;
    display: block;
  .info-dialog-body
    min-height: 260px;
    display: block;
  .info-dialog
    min-height: 400px;
    display: block;
  .eval-dialog-body
    min-height: 500px;
    display: block;
  .eval-dialog
    width 800px!important
    height 500px!important
    max-width 800px!important
    max-height 500px!important
    min-height: 500px;
    display: block;
@media print {
  #main div:first-child,#main2 div:first-child canvas{
    width:100% !important;
  }
  *{

    overflow-x: hidden;
  }
  body{
    height:auto!important;
  }
  #header{
    display: none !important
  }
  #evalRecordContent{
    top: 0!important
    height:auto !important;
    width:100% !important;
  }
  #secTop{
    display:none !important;
  }
  .secMenu{
    top: 0!important
    display: none !important
  }
  #evalRecord{
    top: 0!important
  }
  #evalRecord{
    top: 0!important
    left: 0!important
    background-color: #fff!important
  }
  .rightContent,#secTop,.secMenu,#evalRecord,#evalRecordContent{
    left: 0!important
    top: 0!important
  }
  .menu{
    display: none !important
  }
  .A44 {
    page-break-before: auto!important;
    page-break-after: always!important;
  }
}
